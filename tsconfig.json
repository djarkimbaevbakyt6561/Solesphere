{
   "compilerOptions": {
      "outDir": "./dist/",
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react-jsx",
      "baseUrl": "src",
      "paths": {
         "app/*": ["app/*"],
         "entities/*": ["entities/*"],
         "features/*": ["features/*"],
         "pages/*": ["pages/*"],
         "shared/*": ["shared/*"],
         "widgets/*": ["widgets/*"]
      }
   },
   "include": ["src", "src/widgets/cart-products/ui/CartProducts.tsx"],
   "ts-node": {
      "compilerOptions": {
         "module": "CommonJS"
      }
   }
}
